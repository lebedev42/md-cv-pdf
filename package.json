{
  "name": "md-cv-pdf",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Markdown CV to PDF Template Converter",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "cli": "node apps/cli/dist/index.js",
    "generate": "node apps/cli/dist/index.js generate",
    "generate:previews": "pnpm build && tsx scripts/generate-previews.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.13.0",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.0",
    "tsx": "^4.19.0",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.48.1"
  },
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": ">=20"
  }
}
