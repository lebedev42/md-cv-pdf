<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= data.name %> - <%= data.title %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="resume.css" />
  </head>
  <body>
    <div class="container">
      <header class="header">
        <div class="header-left">
          <div class="experience-badge">
            <%= experience %> yrs<br /><span>exp</span>
          </div>
          <div class="links">
            <a
              href="https://t.me/<%= data.telegram.replace('@', '') %>"
              target="_blank"
              >Telegram</a
            >
            <a href="mailto:<%= data.email %>" class="email"
              ><%= data.email %></a
            >
          </div>
        </div>
        <div class="header-center">
          <h1><%= data.name %></h1>
          <h2>
            <%= data.title %>
          </h2>
          <p class="subtitle">with Full-stack skills</p>
        </div>
        <div class="header-right">
          <div class="location"><%= data.location || 'Remote' %><br />(GMT+3)</div>
        </div>
      </header>
      <section class="section">
        <h3 class="section-title">TECHNICAL SKILLS</h3>
        <p class="skills-text">
          <strong>Frontend:</strong> <%= data.skills.frontend %>
        </p>
        <p class="skills-text">
          <strong>Backend:</strong> <%= data.skills.backend %>
        </p>
      </section>
      <section class="section">
        <h3 class="section-title">WORK EXPERIENCE</h3>
        <% data.jobs.forEach(function(job, index) { %>
        <div class="job">
          <div class="job-header">
            <strong><%= job.title %></strong> (<%= job.period %><% if
            (job.duration) { %> | <%= job.duration %><% } %>) |
            <span class="company-link"><%= job.company %></span>
          </div>
          <p class="job-description"><em><%= job.description %></em></p>
          <ul class="job-details">
            <% job.achievements.forEach(function(achievement) { %>
            <li><%- achievement %></li>
            <% }); %>
          </ul>
          <p class="technologies">
            <em>Technologies:</em> <%= job.technologies %>
          </p>
        </div>
        <% }); %>
      </section>
      <section class="section">
        <h3 class="section-title">EDUCATION</h3>
        <p class="education">
          <strong><%= data.education.period %></strong><br />
          <%= data.education.university %><br />
          <%= data.education.faculty %>
        </p>
      </section>
      <section class="section">
        <h3 class="section-title">LANGUAGES</h3>
        <p class="languages">
          <% if (data.languages.english) { %>
          English — <%= data.languages.english.replace(/English\s*[-—]\s*/i, '').split(' ')[0] %>
          <% } %>
          <% if (data.languages.russian) { %>
          <br />Russian — <%= data.languages.russian.replace(/Russian\s*[-—]\s*/i, '').split(' ')[0] %>
          <% } %>
        </p>
      </section>
    </div>
  </body>
</html>

